<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    android:layout_marginTop="@dimen/content_top_margin"
    android:background="@color/white"
    tools:context="cn.edu.xjtu.respro.activity.AutoInputActivity">
    <LinearLayout
        android:id="@+id/infoLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/infoImageView"
            android:layout_width="@dimen/info_image_size"
            android:layout_height="@dimen/info_image_size"
            android:src="@drawable/ic_error_circle"/>
        <TextView
            android:id="@+id/infoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_padding"
            android:textSize="@dimen/input_button_text"
            android:textColor="@color/colorTextSecond"
            android:text="积分计算中，请稍后..."/>
    </LinearLayout>
    <Button
        android:id="@+id/scanCodeBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_button_height"
        android:textColor="@color/white"
        android:textSize="@dimen/input_button_text"
        android:text="@string/scan"
        android:padding="@dimen/activity_padding"
        android:layout_marginTop="@dimen/margin_50"
        android:layout_below="@id/infoLL"
        android:background="@drawable/auto_input_btn"
        />
</RelativeLayout>
