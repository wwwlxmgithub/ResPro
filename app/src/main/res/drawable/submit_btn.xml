<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/input_button_radius" />
            <gradient android:startColor="@color/submit_btn_normal_bg_start"
                android:endColor="@color/submit_btn_normal_bg_end"
                android:angle="270"
                android:type="linear"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/input_button_radius" />
            <gradient android:startColor="@color/submit_btn_pressed_bg_start"
                android:endColor="@color/submit_btn_pressed_bg_end"
                android:angle="270"
                android:type="linear"/>
        </shape>
    </item>
</selector>